<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="30"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.resq.controller.SOSController">

    <children>
        <Text fx:id="serviceLabel"
              style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <Button fx:id="sosButton" text="SOS"
                style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 26px;
                       -fx-pref-width: 200; -fx-pref-height: 200; -fx-background-radius: 100;"
                onMousePressed="#handleSOSPress"
                onMouseReleased="#handleSOSRelease"/>
    </children>

    <padding>
        <Insets top="50" right="30" bottom="30" left="30"/>
    </padding>
</VBox>
